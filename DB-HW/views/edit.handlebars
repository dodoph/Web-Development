<form action="/" method="post">
	<fieldset>
		{{#each workouts}}
		<input type = "hidden" name="id" value={{this.id}}>
		<label>Name:
			<input type="text" name="name" size="30" maxlength="100" value={{this.name}}>
		</label><br>
		<label>Reps:
			<input type="number" name="reps" value={{this.reps}}>	
		</label><br>
		<label>Weight:
			<input type="number" name="weight" value={{this.weight}}>
		</label><br>
		<label>Date:
			<input type="date" name="date" value={{moment this.date format="YYYY-MM-DD"}}>
		</label><br>
		{{/each}}
		{{#if unitSelected}}
			<label><input type="raido" name="unit" value="lbs" checked>lbs</label>
			<label><input type="radio" name="unit" value="kg" >kg</label>
		{{else}}
			<label><input type="radio" name="unit" value="lbs">lbs</label>
			<label><input type="radio" name="unit" value="kg" checked>kg</label>
		{{/if}}
	  	<label>
	  		<input type="submit" name="Update" value="Update">
	  	</label>
	  	
	</fieldset>
</form>